<h1>Калькулятор</h1>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<br/>

<form action="/calculate/calculate" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <input placeholder="Например: 2+(3^2)/4" name="query"/>

  <input type="submit" value="Вычислить"/>
</form>
